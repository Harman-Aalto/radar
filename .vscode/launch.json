    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Attach to Radar",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5670
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/srv/radar"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Remote Attach to Radar Celery worker",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5671
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/srv/radar"
                }
            ],
            "justMyCode": false
        }
    ]
}
